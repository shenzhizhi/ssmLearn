<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.ItemDao">
    <resultMap id="item" type="item">
        <id property="itemID" column="item_id"/>
        <result property="itemName" column="item_name"/>
        <result property="itemClass" column="item_class"/>
        <result property="stock" column="item_stick"/>
        <result property="price" column="item_price"/>
        <result property="info" column="item_info"/>
        <result property="imagePath" column="item_imagepath"/>
    </resultMap>
    <select id="getItems" resultMap="item">
        SELECT *
        from item
        <where>
            <if test="ClassID!=null">
                and item_class =#{item_class}
            </if>
        </where>
    </select>

    <select id="getItem" resultType="item">

    </select>

    <insert id="addItem" parameterType="item">

    </insert>

    <!--在dao中每个参数添加注解-->
    <update id="updateItem">

    </update>
    
    <delete id="deleteItem" parameterType="item">

    </delete>


</mapper>